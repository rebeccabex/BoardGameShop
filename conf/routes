# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                       controllers.Application.indexRedirect
GET         /index                  controllers.Application.index

GET         /games                  controllers.Games.games
POST        /games                  controllers.Games.gamesFiltered
GET         /games/:category        controllers.Games.gamesByCategory(category: String)
POST        /games/:category        controllers.Games.filterGamesByCategory(category: String)
GET         /products/:name         controllers.Games.displayGame(name: String)
GET         /about                  controllers.Application.page
POST        /search                 controllers.Games.searchGames

GET         /basket                 controllers.Games.basket
GET         /basket/:itemName       controllers.Games.addItemToBasket(itemName: String)
GET         /basket/remove/:itemName    controllers.Games.removeItemFromBasket(itemName: String)
GET         /basket/remove-all      controllers.Games.removeAllFromBasket
GET         /payment                controllers.Application.pay

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file           controllers.Assets.at(path="/public", file)