# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.indexRedirect
GET     /index                      controllers.Application.index
GET     /games                      controllers.Application.games
GET     /games/:name                controllers.Application.displayGame(name: String)
GET     /about                      controllers.Application.page
GET     /basket                     controllers.Application.basket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)